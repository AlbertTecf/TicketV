{% extends 'base.html.twig' %}

{% block body %}
    <h1>Miseajour</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ miseAjour.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ miseAjour.libelle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ miseAjour.description }}</td>
            </tr>
            <tr>
                <th>Date_maj</th>
                <td>{% if miseAjour.datemaj %}{{ miseAjour.datemaj|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('miseajour_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('miseajour_edit', { 'id': miseAjour.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
