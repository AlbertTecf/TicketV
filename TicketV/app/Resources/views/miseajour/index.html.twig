{% extends 'base.html.twig' %}

{% block js %}
    <script>

        $(document).ready( function () {
            $('#table').dataTable( {
                "columnDefs": [
                    { "orderable": false, "targets": 6 },
                ],
                "language": {
                    "decimal":        "",
                    "emptyTable":     "Aucune donnée",
                    "info":           "Affichage _START_ à _END_ sur _TOTAL_ enregistrements",
                    "infoEmpty":      "Affichage 0 à 0 sur 0 enregistrements",
                    "infoFiltered":   "(filtré sur _MAX_ enregistrements)",
                    "infoPostFix":    "",
                    "thousands":      ",",
                    "lengthMenu":     "Afficher _MENU_ enregistrements",
                    "loadingRecords": "Chargement...",
                    "processing":     "Calcul...",
                    "search":         "Rechercher :",
                    "zeroRecords":    "Aucune correspondance trouvée",
                    "paginate": {
                        "first":      "Premier",
                        "last":       "Dernier",
                        "next":       "Suivant",
                        "previous":   "Précédent"
                    },
                    "aria": {
                        "sortAscending":  ": Tri croissant",
                        "sortDescending": ": Tri décroissant"
                    }
                }
            } );
        } );

    </script>

{% endblock %}

{% block body %}
<div class="main">
    <h1>Liste des mises à jours</h1>

    <div class="table-responsive">
        <table id="table" class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Projet</th>
                <th>Version</th>
                <th>Date</th>
                <th>Effectue</th>
                <th>Tickets</th>
                <th></th>
            </tr>
            </thead>
        <tbody>
        {% for maj in majs %}
            <tr>
                <td>{{ maj.getIdMiseAJour() }}</td>
                <td>{{ maj.getProjet().getLibelle() }}</td>
                <td>{{ maj.getVersion() }}</td>
                <td>{{ maj.getDate()|date("d/m/Y H:i") }}</td>
                <td>{% if maj.isEffectue() %} Oui {% else %} Non {% endif %}</td>
                <td>{{ maj.getTickets()|length }} ticket(s)  </td>
                <td class="text-center">
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">

                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                            <li><a href="{{ path('miseajour_show', { 'idMiseAJour': maj.idMiseAJour }) }}">Consulter</a></li>
                            <li><a href="{{ path('miseajour_edit', { 'idMiseAJour': maj.idMiseAJour }) }}">Modifier</a></li>
                            <li><a href="{{ path('miseajour_delete', { 'idMiseAJour': maj.idMiseAJour }) }}">Supprimer</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
    </div>
</div>
<div class="bottom_bar">
    <a href="{{ path('miseajour_new') }}"><span class="glyphicon glyphicon-plus"></span> Créer une mise à jour</a>
</div>
{% endblock %}
