{% extends 'base.html.twig' %}

{% block body %}
<div class="main">
    <h1>Liste des statuts</h1>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>#</th>
                <th>Libelle</th>
                <th>Actif</th>
                <th>Clos</th>

                <th></th>
            </tr>
            </thead>
        <tbody>
        {% for statut in statuts %}
            <tr>
                <td>{{ statut.getIdStatut() }}</td>
                <td>
                    <table>
                        <tr>
                            <td> <div class="color_statut" style="background-color:{{ statut.getCouleur() }}"></div></td>
                            <td>{{ statut.getLibelle() }}</td>
                        </tr>
                    </table>
                </td>
                <td>{% if statut.getActif() %} Oui {% else %} Non {% endif %}</td>
                <td>{% if statut.getClos() %} Oui {% else %} Non {% endif %}</td>

                <td class="text-center">
                    <div class="dropdown">
                        <button class="btn btn-default btn-sm dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">

                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                            <li><a href="{{ path('statut_show', { 'idStatut': statut.idStatut }) }}">Consulter</a></li>
                            <li><a href="{{ path('statut_edit', { 'idStatut': statut.idStatut }) }}">Modifier</a></li>
                            <li><a href="{{ path('statut_delete', { 'idStatut': statut.idStatut }) }}">Supprimer</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
    </div>
</div>
<div class="bottom_bar">
    <a href="{{ path('statut_new') }}"><span class="glyphicon glyphicon-plus"></span> Cr√©er un nouveau statut</a>
</div>
{% endblock %}
