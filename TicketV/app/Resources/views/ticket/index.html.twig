{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tickets list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Description</th>
                <th>Lien</th>
                <th>Statut</th>
                <th>Projet</th>
                <th>Mise Ã  jour</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td><a href="{{ path('ticket_show', { 'id': ticket.id }) }}">{{ ticket.id }}</a></td>
                <td>{{ ticket.libelle }}</td>
                <td>{{ ticket.description }}</td>
                <td>{{ ticket.lien }}</td>

                <td>{% if ticket.statut %}{{ ticket.statut.libelle }}{% endif %}</td>
                <td>{% if ticket.projet %}{{ ticket.projet.libelle }}{% endif %}</td>
                <td>{% if ticket.miseajour %}{{ ticket.miseajour.libelle }}{% endif %}</td>
                <td><a href="{{ path('ticket_show', { 'id': ticket.id }) }}">show</a></td>
                <td><a href="{{ path('ticket_edit', { 'id': ticket.id }) }}">edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ticket_new') }}">Create a new ticket</a>
        </li>
    </ul>
{% endblock %}
