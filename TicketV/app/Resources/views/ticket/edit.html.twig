{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modification du Ticket </h1>

    {{ form_start(edit_form) }}

    {% form_theme edit_form 'form/fields.html.twig' %}

    {{ form_widget(edit_form) }}

    <hr/>
    <b> Suivi du ticket : </b>
    {% for suivi in ticket.getSuiviTicket() %}
        <div class="suivi_ticket">
            <div class="row">
                <div class="col-md-3">
                    <b>{{ suivi.getIdUtilisateur().username }}</b>,
                    le {{ suivi.getDate()|date('d/m/Y à H:i:s') }}<br/>
                    {{ suivi.getIdStatut().getLibelle() }}
                </div>
                <div class="col-md-7">{{ suivi.getRemarque() }}</div>
            </div>
        </div>

    {% endfor %}
    <hr/>
    <div class="pull-right">
        <div class="row">
            <div class="col-md-5">
                <input class="btn btn-primary" type="submit" value="Modifier" />
                {{ form_end(edit_form) }}
            </div>
            <div class="col-md-5">
                {{ form_start(delete_form) }}
                <input class="btn btn-primary" type="submit" value="Supprimer">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
    <a href="{{ path('ticket_index') }}"><span class="glyphicon glyphicon-menu-hamburger"></span> Retour à la liste</a>

{% endblock %}
