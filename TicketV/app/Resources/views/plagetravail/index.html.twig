                            <th>Ticket</th>
                            <th>Remarque</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for plage in plageTravails_jour %}
                            <tr>
                                <td>{{ plage.getIdPlage() }}</td>
