{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plagetravails list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for plageTravail in plageTravails %}
            <tr>
                <td><a href="{{ path('plagetravail_show', { 'id': plageTravail.id }) }}">{{ plageTravail.id }}</a></td>
                <td>{% if plageTravail.dateDebut %}{{ plageTravail.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if plageTravail.dateFin %}{{ plageTravail.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('plagetravail_show', { 'id': plageTravail.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('plagetravail_edit', { 'id': plageTravail.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plagetravail_new') }}">Create a new plageTravail</a>
        </li>
    </ul>
{% endblock %}
