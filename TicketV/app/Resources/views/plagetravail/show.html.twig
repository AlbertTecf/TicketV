{% extends 'base.html.twig' %}

{% block body %}
    <div class="main">
        <h1>Plage de travail</h1>

        <div class="row">
            <div class="col-md-2"><b>Identifiant : </b></div>
            <div class="col-md-8">{{ plageTravail.getIdPlage() }}</div>
        </div>
        <div class="row">
            <div class="col-md-2"><b>Début : </b></div>
            <div class="col-md-8">{{ plageTravail.getDateDebut()|date('d/m/Y') }} - {{ plageTravail.getHeureDebut()|date('H:i:s') }}</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b>Fin : </b></div>
            <div class="col-md-8">{{ plageTravail.getDateFin()|date('d/m/Y') }} - {{ plageTravail.getHeureFin()|date('H:i:s') }}</div>
        </div>

        <div class="row">
            <div class="col-md-2"><b>Ticket : </b></div>
            <div class="col-md-8">
                <table>
                    <tr>
                        <td><div class="color_statut" style="background-color:{{ plageTravail.getTicket().getIdStatut().getCouleur() }}"></div></td>
                        <td> <a href="{{ path('ticket_show', { 'idTicket': plageTravail.getTicket().getIdTicket() }) }}">#{{ plageTravail.getTicket().getIdTicket() }} {{ plageTravail.getTicket().getLibelle() }}</a></td>
                    </tr>
                </table>
           </div>
        </div>
        <div class="row">
            <div class="col-md-2"><b>Utilisateur : </b></div>
            <div class="col-md-8">{{ plageTravail.getUtilisateur().username }}</div>
        </div>
        <div class="row">
            <div class="col-md-2"><b>Remarqie : </b></div>
            <div class="col-md-8">{{ plageTravail.getRemarque() }}</div>
        </div>
    </div>

    <div class="bottom_bar">
        <a href="{{ path('plagetravail_index') }}"><span class="glyphicon glyphicon-menu-hamburger"></span> Retour à la liste</a>
        <a href="{{ path('plagetravail_edit', { 'idPlage': plageTravail.idPlage }) }}"><span class="glyphicon glyphicon-pencil"></span> Modifier</a>
        {{ form_start(delete_form) }}
        <input class="btn btn-primary supprimer-button" type="submit" value="Supprimer">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
