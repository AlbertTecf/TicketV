{% extends 'base.html.twig' %}

{% block body %}
    <h1>Plagetravail</h1>

    <table>
        <tbody>
            <tr>
                <th>Datedebut</th>
                <td>{% if plageTravail.dateDebut %}{{ plageTravail.dateDebut|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if plageTravail.dateFin %}{{ plageTravail.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Idplage</th>
                <td>{{ plageTravail.idPlage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plagetravail_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('plagetravail_edit', { 'idPlage': plageTravail.idPlage }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
