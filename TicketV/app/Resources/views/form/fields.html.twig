{% block form_row %}
    <div class="row">
        <div class="col-md-2">
            {{ form_label(form) }}
        </div>
        {{ form_errors(form) }}
        <div class="col-md-8">
            {{ form_widget(form) }}
        </div>
    </div>
    <br/>
{% endblock form_row %}


{% block text_widget %}
    {% spaceless %}
        <input width="70%" type="text" class="form-control" {{ block('widget_attributes') }} value="{{ value }}"/>
    {% endspaceless %}
{% endblock text_widget %}

{% block textarea_widget %}
    {% spaceless %}
        <textarea rows="10" width="70%" class="form-control" {{ block('widget_attributes') }}>{{ value }}</textarea>
    {% endspaceless %}
{% endblock textarea_widget %}

{% block choice_widget %}
    <select  width="70%" {{ block('widget_attributes') }} class="form-control {% if multiple %} selectpicker {% endif %}" {% if multiple %}multiple title="Aucune sÃ©lection"{% endif %}>
        {% if placeholder %}
        <option value="{{ null }}" {% if choices|length == 0 %} selected {% endif %}>{{ placeholder }}</option>
        {% endif %}
        {% for choice in choices %}
            <option value="{{ choice.value }}" {% if choice is selectedchoice(value) %} selected {% endif %}>{{ choice.label }}</option>
        {% endfor %}
    </select>
{% endblock %}


{% block _appbundle_statut_couleur_widget %}
    <input type="color" width="70%"  class="form-control" {{ block('widget_attributes') }} value="{{ value }}"/>
{% endblock %}

{% block date_widget %}
    <input type="date" width="70%"  class="form-control" {{ block('widget_attributes') }} value="{{ value }}"/>
{% endblock %}





