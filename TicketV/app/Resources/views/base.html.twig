<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}TicketV{% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.css') }}">

        {% block javascripts %}
            <script src="{{ asset('assets/vendor/jquery/dist/jquery.js') }}"></script>
            <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.js') }}"></script>
        {% endblock %}

        <style>
            .table-responsive {
                overflow-x: visible !important;
                overflow-y: visible !important;
            }

            .bg-faded {
                background-color: #f7f7f7;
                border-right: 1px solid #eee;
            }

            .sidebar {
                position: fixed;
                top: 51px;
                bottom: 0;
                left: 0;
                z-index: 1000;
                padding: 0px;
                padding-top:20px;
            }

            .offset-md-2 {
                margin-left: 16.666667%;
            }

            .ticket_desc{
                padding-left:20px;
                padding-top:15px;
                padding-bottom:15px;
                padding-right:15px;

                border-left: 2px solid #286090;
                margin-top:10px;
            }

            .suivi_ticket{
                margin-top:10px;
                padding-left : 20px;
                border-left: 2px solid #286090;
            }

            .icon{
                padding:5px;
            }

        </style>

    </head>
    <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">TicketV</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbar-brand"><span class="small">Connecté en tant que {{ app.user.username }}</span>
                    <li>
                        <a href="#"> Déconnexion</a>
                    </li>

                </ul>
                <form class="navbar-form navbar-right">
                    <input class="form-control" placeholder="Search..." type="text">
                </form>
            </div>
        </div>
    </nav>
    <br/>
    <br/>
    <br/>
    <div class="container-fluid">
        <div class="row">
            <div class="col-m-3 col-md-2 bg-faded sidebar">
                <ul class="nav nav-sidebar">
                    <li><a href="{{ path('homepage') }}" {% if app.request.attributes.get('_route') == 'homepage' %} class="bg-primary" {% endif %} ><span class="icon glyphicon  glyphicon-home"></span> Accueil </a></li>
                    <li><a href="{{ path('ticket_new') }}" {% if app.request.attributes.get('_route') == 'ticket_new' %} class="bg-primary" {% endif %} ><span class="icon glyphicon glyphicon-plus"></span> Ajouter un ticket </a></li>
                    <li><a href="{{ path('ticket_index') }}" {% if app.request.attributes.get('_route') == 'ticket_index' %} class="bg-primary" {% endif %} ><span class="icon glyphicon glyphicon-inbox"></span> Gestion Tickets </a></li>
                    <li><a href="{{ path('projet_index') }}" {% if app.request.attributes.get('_route') == 'projet_index' %} class="bg-primary" {% endif %} ><span class="icon glyphicon glyphicon-briefcase"></span> Gestion Projets</a></li>
                    <li><a href="{{ path('statut_index') }}" {% if app.request.attributes.get('_route') == 'statut_index' %} class="bg-primary" {% endif %} ><span class="icon glyphicon glyphicon-tasks"></span> Gestion Statuts </a></li>
                    <li><a href="{{ path('degreimportance_index') }}" {% if app.request.attributes.get('_route') == 'degreimportance_index' %} class="bg-primary" {% endif %} ><span class="icon glyphicon glyphicon-alert"></span> Gestion Importances</a></li>
                    <li><a href="{{ path('tags_index') }}" {% if app.request.attributes.get('_route') == 'tags_index' %} class="bg-primary" {% endif %} ><span class="icon glyphicon glyphicon-tags"></span> Gestion Tags</a></li>

                </ul>
            </div>
            <div class="col-m-3 col-md-2 offset-md-2">
                <div class="container">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
    </div>

    </body>
</html>

