{% extends 'base.html.twig' %}

{% block body %}
    <h1>Degré d'importance</h1>

    <div class="row">
        <div class="col-md-2"><b>Identifiant : </b></div>
        <div class="col-md-8">{{ degreImportance.idDegreImportance }}</div>
    </div>
    <div class="row">
        <div class="col-md-2"><b>Libelle : </b></div>
        <div class="col-md-8">{{ degreImportance.libelle }}</div>
    </div>
    <div class="row">
        <div class="col-md-2"><b>Actif : </b></div>
        <div class="col-md-8">{% if degreImportance.actif %} Oui {% else %} Non {% endif %}</div>
    </div>


    <a href="{{ path('degreimportance_index') }}"><span class="glyphicon glyphicon-menu-hamburger"></span> Retour à la liste</a>
    <br/>
    <a href="{{ path('degreimportance_edit', { 'idDegreImportance': degreImportance.idDegreImportance }) }}"><span class="glyphicon glyphicon-pencil"></span> Modifier</a>
    <div class="pull-right">
        {{ form_start(delete_form) }}
        <input class="btn btn-primary" type="submit" value="Supprimer">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
