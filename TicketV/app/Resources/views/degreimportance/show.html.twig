{% extends 'base.html.twig' %}

{% block body %}
<div class="main">
    <h1>Degré d'importance</h1>

    <div class="row">
        <div class="col-md-2"><b>Identifiant : </b></div>
        <div class="col-md-8">{{ degreImportance.getIdDegreImportance() }}</div>
    </div>
    <div class="row">
        <div class="col-md-2"><b>Libelle : </b></div>
        <div class="col-md-8">{{ degreImportance.getLibelle() }}</div>
    </div>
    <div class="row">
        <div class="col-md-2"><b>Actif : </b></div>
        <div class="col-md-8">{% if degreImportance.getActif() %} Oui {% else %} Non {% endif %}</div>
    </div>

</div>
<div class="bottom_bar">
    <a href="{{ path('degreimportance_index') }}"><span class="glyphicon glyphicon-menu-hamburger"></span> Retour à la liste</a>
    <a href="{{ path('degreimportance_edit', { 'idDegreImportance': degreImportance.idDegreImportance }) }}"><span class="glyphicon glyphicon-pencil"></span> Modifier</a>
        {{ form_start(delete_form) }}
        <input class="btn btn-primary supprimer-button" type="submit" value="Supprimer">
        {{ form_end(delete_form) }}
</div>
{% endblock %}
