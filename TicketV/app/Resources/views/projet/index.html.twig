{% extends 'base.html.twig' %}

{% block body %}
    <h1>Projets list</h1>

    <table>
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Actif</th>
                <th>Idprojet</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for projet in projets %}
            <tr>
                <td><a href="{{ path('projet_show', { 'idProjet': projet.idProjet }) }}">{{ projet.libelle }}</a></td>
                <td>{{ projet.actif }}</td>
                <td>{{ projet.idProjet }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('projet_show', { 'idProjet': projet.idProjet }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('projet_edit', { 'idProjet': projet.idProjet }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('projet_new') }}">Create a new projet</a>
        </li>
    </ul>
{% endblock %}
